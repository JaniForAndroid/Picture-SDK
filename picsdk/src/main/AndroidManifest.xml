      android:name="com.namibox.hfx.ui.HfxPlayAudioActivity"
      android:screenOrientation="portrait"
      android:theme="@style/NamiboxAppTheme.NoTitle.FullScreen" />

    <!--imagepicker-->
    <activity
      android:name="com.namibox.imageselector.ImageSelectorActivity"
      android:label="选择图片"
      android:screenOrientation="portrait"
      android:theme="@style/ImageStyle" />
    <activity
      android:name="com.namibox.imageselector.ImagePreviewActivity"
      android:label="预览图片"
      android:screenOrientation="portrait"
      android:theme="@style/ImageStyle.Preview" />

    <activity
      android:name="com.namibox.imageselector.ImageEditActivity"
      android:screenOrientation="portrait"
      android:theme="@style/ImageStyle.Edit" />

    <activity
      android:name="com.namibox.imageselector.cropper.CropImageActivity"
      android:screenOrientation="portrait"
      android:theme="@style/CropImageStyle" />

    <activity
      android:name="com.namibox.imageselector.cropper.AvatarCropActivity"
      android:screenOrientation="portrait"
      android:theme="@style/NamiboxAppTheme.FullScreen" />

    <activity
      android:name="com.namibox.qr_code.ScannerActivity"
      android:configChanges="keyboardHidden|orientation|screenSize"
      android:screenOrientation="behind"
      android:theme="@style/Theme.AppCompat.NoActionBar" />

    <activity
      android:name="vn.tungdx.mediapicker.activities.MediaPickerActivity"
      android:theme="@style/MediaPickerTheme" />

  </application>

</manifest>