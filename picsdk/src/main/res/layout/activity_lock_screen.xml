<?xml version="1.0" encoding="utf-8"?>
<com.namibox.commonlib.lockscreen.UnderView xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:id="@+id/under_view"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@color/transparent">

  <LinearLayout
    android:id="@+id/rl_move"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="horizontal">

    <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:paddingTop="24dp"
      android:paddingBottom="24dp"
      android:paddingLeft="21dp"
      android:paddingRight="21dp"
      android:layout_marginLeft="12dp"
      android:layout_marginRight="12dp"
      android:layout_gravity="center"
      android:layout_marginBottom="30dp"
      android:background="@drawable/bg_radius_rect">

      <ImageView
        android:id="@+id/iv_cover"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:scaleType="fitXY"
        android:adjustViewBounds="true"
        android:src="@drawable/ic_audio_cover_default"/>

      <TextView
        android:id="@+id/tv_title"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="16dp"
        android:layout_toRightOf="@id/iv_cover"
        android:textColor="#333333"
        android:textSize="18sp"
        android:text="纳米盒"/>

      <TextView
        android:id="@+id/tv_audio_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_alignLeft="@id/tv_title"
        android:layout_below="@id/tv_title"
        android:textColor="#666666"
        android:textSize="14sp"
        tools:text="Unit1.My abilites"/>

      <SeekBar
        android:id="@+id/seek_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:progressDrawable="@drawable/seekbar_audio_bg"
        android:thumb="@null"
        android:layout_marginLeft="-18dp"
        android:layout_marginRight="-18dp"
        android:layout_marginTop="24dp"
        android:layout_below="@id/iv_cover"/>

      <TextView
        android:id="@+id/tv_current_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="9dp"
        android:layout_below="@id/seek_bar"
        android:textColor="#333333"
        android:textSize="12sp"
        android:text="-:-"
        tools:text="02:11"/>

      <TextView
        android:id="@+id/tv_total_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="9dp"
        android:layout_alignParentRight="true"
        android:layout_below="@id/seek_bar"
        android:textColor="#333333"
        android:textSize="12sp"
        android:text="-:-"
        tools:text="07:31"/>

      <ImageView
        android:id="@+id/iv_play_pause"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:onClick="onPlayPause"
        android:layout_below="@id/tv_total_time"
        android:layout_centerHorizontal="true"
        android:src="@drawable/nb_ic_pause"/>

      <ImageView
        android:id="@+id/iv_previous"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="70dp"
        android:onClick="onPrevious"
        android:layout_alignBottom="@id/iv_play_pause"
        android:layout_toLeftOf="@id/iv_play_pause"
        android:src="@drawable/ic_previous"/>

      <ImageView
        android:id="@+id/iv_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="70dp"
        android:onClick="onNext"
        android:layout_alignBottom="@id/iv_play_pause"
        android:layout_toRightOf="@id/iv_play_pause"
        android:src="@drawable/ic_next"/>

      <com.namibox.commonlib.view.HighLightTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/iv_next"
        android:layout_marginTop="25dp"
        android:textSize="15sp"
        android:text="右滑解锁"/>

    </RelativeLayout>


  </LinearLayout>

</com.namibox.commonlib.lockscreen.UnderView>