<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent">

  <View
    android:id="@+id/title_bg"
    android:layout_width="0dp"
    android:layout_height="56dp"
    android:background="#fff"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toTopOf="parent" />

  <TextView
    android:id="@+id/title"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textColor="#333"
    android:textSize="18sp"
    android:visibility="invisible"
    app:layout_constraintBottom_toBottomOf="@id/title_bg"
    app:layout_constraintLeft_toLeftOf="@id/title_bg"
    app:layout_constraintRight_toRightOf="@id/title_bg"
    app:layout_constraintTop_toTopOf="@id/title_bg"
    tools:text="@string/app_name" />

  <ImageView
    android:id="@+id/back"
    android:layout_width="56dp"
    android:layout_height="56dp"
    android:background="@drawable/white_round_bg"
    android:scaleType="centerInside"
    android:src="@drawable/icon_back2"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintTop_toTopOf="parent" />

  <LinearLayout
    android:id="@+id/action_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/white_round_corner4_bg"
    android:gravity="center"
    android:orientation="horizontal"
    android:padding="10dp"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toTopOf="@id/title_bg"
    app:layout_constraintBottom_toBottomOf="@id/title_bg">

    <ImageView
      android:id="@+id/action"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:scaleType="centerInside"
      android:src="@drawable/icon_hand" />

    <TextView
      android:id="@+id/action_text"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginLeft="7dp"
      android:textColor="#00B9FF"
      android:textSize="15sp" />
  </LinearLayout>

  <com.namibox.commonlib.view.HackyViewPager
    android:id="@+id/image_pager"
    android:layout_width="0dp"
    android:layout_height="0dp"
    app:layout_constraintBottom_toTopOf="@id/pager"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toBottomOf="@id/title_bg"
    tools:background="#888" />

  <TextView
    android:id="@+id/page_index"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:background="@drawable/page_index_bg"
    android:gravity="center"
    android:padding="2dp"
    android:textColor="#333"
    android:textSize="10sp"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toTopOf="@id/image_pager"
    tools:text="13/43" />

  <android.support.v4.view.ViewPager
    android:id="@+id/pager"
    android:layout_width="0dp"
    android:layout_height="0dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintDimensionRatio="375:144"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent" />

  <CheckedTextView
    android:id="@+id/play"
    android:layout_width="35dp"
    android:layout_height="35dp"
    android:layout_marginStart="15dp"
    android:background="@drawable/icon_audio_pic"
    android:scaleType="centerInside"
    app:layout_constraintBottom_toBottomOf="@id/pager"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintTop_toTopOf="@id/pager" />

  <CheckedTextView
    android:id="@+id/trans"
    android:layout_width="35dp"
    android:layout_height="35dp"
    android:layout_marginEnd="15dp"
    android:background="@drawable/icon_translate"
    android:checked="false"
    android:scaleType="centerInside"
    app:layout_constraintBottom_toBottomOf="@id/pager"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toTopOf="@id/pager" />

  <LinearLayout
    android:id="@+id/viewGroup"
    android:layout_width="match_parent"
    android:layout_height="25dp"
    android:gravity="center"
    android:orientation="horizontal"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"></LinearLayout>
</android.support.constraint.ConstraintLayout>