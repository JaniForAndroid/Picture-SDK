<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  xmlns:voiceView="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="match_parent">

  <include
    android:id="@+id/action_bar"
    layout="@layout/layout_action_bar"/>

  <TextView
    android:id="@+id/tvPageIndex"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    android:paddingLeft="14dp"
    android:paddingRight="14dp"
    android:background="@drawable/ic_page_index_bg"
    android:textColor="@color/common_text_black"
    android:textSize="10sp"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toBottomOf="@id/action_bar"
    tools:ignore="SmallSp"
    tools:text="1/6"/>

  <com.namibox.commonlib.view.HackyViewPager
    android:id="@+id/viewPager"
    android:layout_width="0dp"
    android:layout_height="0dp"
    android:layout_marginTop="10dp"
    app:layout_constraintBottom_toTopOf="@id/ivEvaluate"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toBottomOf="@id/tvPageIndex"/>

  <ImageView
    android:id="@+id/ivEvaluate"
    android:layout_width="80dp"
    android:layout_height="80dp"
    android:layout_marginBottom="41dp"
    android:contentDescription="@null"
    android:src="@drawable/icon_evaluate_pic"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"/>

  <ImageView
    android:id="@+id/ivEvaluate_watch"
    android:layout_width="80dp"
    android:layout_height="80dp"
    android:layout_marginBottom="41dp"
    android:contentDescription="@null"
    android:src="@drawable/icon_pic_play"
    android:visibility="gone"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"/>

  <TextView
    android:id="@+id/tv_evaluate"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="点击开始录音"
    android:textColor="@color/common_text_black"
    android:textSize="12sp"
    app:layout_constraintLeft_toLeftOf="@id/ivEvaluate"
    app:layout_constraintRight_toRightOf="@id/ivEvaluate"
    app:layout_constraintTop_toTopOf="@id/tv_audio"
    tools:ignore="HardcodedText"/>

  <ImageView
    android:id="@+id/ivAudio"
    android:layout_width="45dp"
    android:layout_height="45dp"
    android:layout_marginEnd="50dp"
    android:contentDescription="@null"
    android:src="@drawable/icon_audio_enabled"
    app:layout_constraintBottom_toBottomOf="@+id/ivEvaluate"
    app:layout_constraintRight_toLeftOf="@+id/ivEvaluate"
    app:layout_constraintTop_toTopOf="@+id/ivEvaluate"/>

  <ImageView
    android:id="@+id/ivAudio_watch"
    android:layout_width="45dp"
    android:layout_height="45dp"
    android:layout_marginEnd="50dp"
    android:contentDescription="@null"
    android:visibility="gone"
    android:src="@drawable/icon_pic_auto"
    app:layout_constraintBottom_toBottomOf="@+id/ivEvaluate"
    app:layout_constraintRight_toLeftOf="@+id/ivEvaluate"
    app:layout_constraintTop_toTopOf="@+id/ivEvaluate"/>

  <TextView
    android:id="@+id/tv_audio"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="26dp"
    android:text="原声"
    android:textColor="@color/common_text_black"
    android:textSize="12sp"
    app:layout_constraintLeft_toLeftOf="@id/ivAudio"
    app:layout_constraintRight_toRightOf="@id/ivAudio"
    app:layout_constraintTop_toBottomOf="@id/ivAudio"
    tools:ignore="HardcodedText"/>

  <ImageView
    android:id="@+id/ivRecord"
    android:layout_width="45dp"
    android:layout_height="45dp"
    android:layout_marginStart="50dp"
    android:contentDescription="@null"
    android:src="@drawable/icon_record_enabled"
    app:layout_constraintBottom_toBottomOf="@+id/ivEvaluate"
    app:layout_constraintLeft_toRightOf="@+id/ivEvaluate"
    app:layout_constraintTop_toTopOf="@+id/ivEvaluate"
    tools:src="@drawable/ic_score_result_excellent"/>

  <TextView
    android:id="@+id/tvScore"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textColor="#fff"
    android:textSize="24sp"
    android:visibility="invisible"
    app:layout_constraintBottom_toBottomOf="@+id/ivRecord"
    app:layout_constraintLeft_toLeftOf="@+id/ivRecord"
    app:layout_constraintRight_toRightOf="@+id/ivRecord"
    app:layout_constraintTop_toTopOf="@+id/ivRecord"
    tools:text="80"
    tools:visibility="visible"/>

  <TextView
    android:id="@+id/tv_record"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="回放"
    android:textColor="@color/common_text_black"
    android:textSize="12sp"
    app:layout_constraintLeft_toLeftOf="@id/ivRecord"
    app:layout_constraintRight_toRightOf="@id/ivRecord"
    app:layout_constraintTop_toTopOf="@id/tv_audio"
    tools:ignore="HardcodedText"/>


  <ImageView
    android:id="@+id/ivStar"
    android:layout_width="49dp"
    android:layout_height="19dp"
    android:contentDescription="@null"
    android:visibility="gone"
    app:layout_constraintBottom_toTopOf="@+id/ivRecord"
    app:layout_constraintLeft_toLeftOf="@+id/ivRecord"
    app:layout_constraintRight_toRightOf="@+id/ivRecord"
    tools:src="@drawable/icon_star_three"
    tools:visibility="visible"/>

  <com.carlos.voiceline.mylibrary.VoiceLineView
    android:id="@+id/voicLine"
    android:layout_width="0dp"
    android:layout_height="49dp"
    android:layout_marginBottom="30dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:background="@android:color/white"
    android:visibility="invisible"
    app:layout_constraintBottom_toTopOf="@+id/ivEvaluate"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    voiceView:fineness="three"
    voiceView:middleLine="@color/theme_color"
    voiceView:middleLineHeight="1dp"
    voiceView:rectSpace="2dp"
    voiceView:rectWidth="5dp"
    voiceView:sensibility="four"
    voiceView:viewMode="line"
    voiceView:voiceLine="@color/theme_color"/>

</android.support.constraint.ConstraintLayout>