<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent">
  <ImageView
    android:id="@+id/networkErrImg"
    android:layout_width="120dp"
    android:layout_height="120dp"
    android:layout_marginTop="120dp"
    android:layout_centerHorizontal="true"
    tools:src="@color/action_mode_bg" />

  <TextView
    android:id="@+id/networkErrText"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp"
    android:layout_below="@+id/networkErrImg"
    android:layout_centerHorizontal="true"
    android:text="@string/common_network_none_tips"
    android:textSize="18sp" />

  <Button
    android:id="@+id/freshBtn"
    android:layout_width="wrap_content"
    android:layout_height="30dp"
    android:layout_marginTop="16dp"
    android:layout_below="@+id/networkErrText"
    android:layout_centerHorizontal="true"
    android:background="@drawable/common_btn_blue_bg"
    android:text="点击刷新"
    android:textColor="@android:color/white"
    android:textSize="16dp" />


</RelativeLayout>