<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="#992A1953">

  <android.support.constraint.ConstraintLayout
    android:id="@+id/cs_content"
    android:layout_width="330dp"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_ott_bg"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <TextView
      android:id="@+id/title"
      android:textStyle="bold"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="55dp"
      android:textColor="#00B9FF"
      android:textSize="18sp"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      tools:text="标题文字"/>

    <TextView
      android:id="@+id/content"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="30dp"
      android:paddingLeft="15dp"
      android:paddingRight="15dp"
      android:gravity="left"
      android:lineSpacingExtra="1dp"
      android:maxWidth="360dp"
      android:textColor="#fff"
      android:textSize="14sp"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintTop_toBottomOf="@id/title"
      tools:text="内容内容内容内内容内容内容内内容内容内容内\n容内容内容内容内容内容内"/>

    <LinearLayout
      android:id="@+id/horizontalBtnLayout"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginTop="40dp"
      android:layout_marginBottom="56dp"
      android:layout_marginLeft="14dp"
      android:layout_marginRight="14dp"
      android:orientation="horizontal"
      android:visibility="gone"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintTop_toBottomOf="@id/content"
      tools:visibility="invisible">

      <Button
        android:id="@+id/btnHorizontal1"
        android:textStyle="bold"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_weight="1"
        android:layout_marginRight="8dp"
        android:background="@drawable/native_page_dialog_button_negative_ott_bg"
        android:focusable="true"
        android:nextFocusDown="@id/btnHorizontal1"
        android:nextFocusLeft="@id/btnHorizontal1"
        android:nextFocusUp="@id/btnHorizontal1"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:visibility="visible">
        <requestFocus/>
      </Button>

      <Button
        android:id="@+id/btnHorizontal2"
        android:textStyle="bold"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_weight="1"
        android:layout_marginLeft="8dp"
        android:background="@drawable/native_page_dialog_button_positve_ott_bg"
        android:focusable="true"
        android:nextFocusDown="@id/btnHorizontal2"
        android:nextFocusRight="@id/btnHorizontal2"
        android:nextFocusUp="@id/btnHorizontal2"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:visibility="visible"/>

    </LinearLayout>

    <LinearLayout
      android:id="@+id/verticalBtnLayout"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginTop="40dp"
      android:layout_marginBottom="56dp"
      android:layout_marginLeft="14dp"
      android:layout_marginRight="14dp"
      android:layout_below="@id/content"
      android:orientation="vertical"
      android:visibility="gone"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintTop_toBottomOf="@id/content"
      tools:visibility="visible">

      <Button
        android:id="@+id/btn1"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:background="@drawable/native_page_dialog_button_positve_ott_bg"
        android:focusable="true"
        android:nextFocusLeft="@id/btn1"
        android:nextFocusRight="@id/btn1"
        android:nextFocusUp="@id/btn1"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:visibility="gone"
        tools:text="sdsfdfdf"
        tools:visibility="visible">
        <requestFocus/>
      </Button>

      <Button
        android:id="@+id/btn2"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:background="@drawable/native_page_dialog_button_positve_ott_bg"
        android:focusable="true"
        android:nextFocusLeft="@id/btn2"
        android:nextFocusRight="@id/btn2"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:visibility="gone"
        tools:text="sdsfdfdf"
        tools:visibility="visible"/>
      <Button
        android:id="@+id/btn3"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:background="@drawable/native_page_dialog_button_positve_ott_bg"
        android:focusable="true"
        android:nextFocusDown="@id/btn3"
        android:nextFocusLeft="@id/btn3"
        android:nextFocusRight="@id/btn3"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:visibility="gone"
        tools:text="sdsfdfdf"
        tools:visibility="visible"/>
    </LinearLayout>

  </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>