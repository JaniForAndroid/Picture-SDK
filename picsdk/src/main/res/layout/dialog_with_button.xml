<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent">

  <android.support.constraint.ConstraintLayout
    android:id="@+id/cs_content"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_content_background2"
    app:layout_constraintHorizontal_bias="0.0"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toBottomOf="@id/dialog_close">

    <View
      android:id="@+id/view_top_bg"
      android:layout_width="0dp"
      android:layout_height="0dp"
      android:background="@drawable/dialog_top_bg"
      app:layout_constraintBottom_toBottomOf="@id/iv_notice"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
      android:id="@+id/iv_notice"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:paddingBottom="6dp"
      android:adjustViewBounds="true"
      android:src="@drawable/ic_notic_1"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintWidth_percent="0.2131"/>

    <TextView
      android:id="@+id/title"
      android:textStyle="bold"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textColor="#00B9FF"
      android:textSize="18sp"
      app:layout_constraintBottom_toBottomOf="@id/view_top_bg"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintTop_toTopOf="@id/view_top_bg"
      tools:text="标题文字"/>

    <ImageView
      android:id="@+id/iv_content"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:adjustViewBounds="true"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintTop_toBottomOf="@id/view_top_bg"/>

    <TextView
      android:id="@+id/content"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="29dp"
      android:paddingLeft="25dp"
      android:paddingRight="25dp"
      android:gravity="left"
      android:lineSpacingExtra="1dp"
      android:textColor="#666666"
      android:textSize="14sp"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintTop_toBottomOf="@id/iv_content"
      tools:text="内容内容内容内\n容内容内容内容内容内容内"/>

    <Space
      android:id="@+id/space"
      android:layout_width="wrap_content"
      android:layout_height="35dp"
      app:layout_constraintBottom_toBottomOf="@id/verticalBtnLayout"
      app:layout_constraintLeft_toLeftOf="parent"/>

    <ImageView
      android:id="@+id/iv_v"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:adjustViewBounds="true"
      android:src="@drawable/ic_notice_2"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintTop_toTopOf="@id/space"
      app:layout_constraintWidth_percent="0.23"/>

    <Space
      android:id="@+id/space1"
      android:layout_width="wrap_content"
      android:layout_height="35dp"
      app:layout_constraintBottom_toBottomOf="@id/horizontalBtnLayout"
      app:layout_constraintLeft_toLeftOf="parent"/>

    <ImageView
      android:id="@+id/iv_h"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:adjustViewBounds="true"
      android:src="@drawable/ic_notice_2"
      android:visibility="gone"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintTop_toTopOf="@id/space1"
      app:layout_constraintWidth_percent="0.23"/>

    <LinearLayout
      android:id="@+id/horizontalBtnLayout"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginTop="28dp"
      android:orientation="horizontal"
      android:visibility="gone"
      tools:visibility="visible"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintTop_toBottomOf="@id/content">

      <Button
        android:id="@+id/btnHorizontal1"
        android:textStyle="bold"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_weight="1"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="5dp"
        android:text="继续抢红包的的"
        android:focusable="true"
        android:nextFocusUp="@id/btnHorizontal1"
        android:nextFocusLeft="@id/btnHorizontal1"
        android:nextFocusDown="@id/btnHorizontal1"
        android:background="@drawable/dialog_button_negative_bg1"
        android:textAllCaps="false"
        android:textColor="@color/theme_color"
        android:textSize="16sp"
        android:visibility="visible">
        <requestFocus/>
      </Button>

      <Button
        android:id="@+id/btnHorizontal2"
        android:textStyle="bold"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_weight="1"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="14dp"
        android:focusable="true"
        android:nextFocusUp="@id/btnHorizontal2"
        android:nextFocusRight="@id/btnHorizontal2"
        android:nextFocusDown="@id/btnHorizontal2"
        android:background="@drawable/dialog_button_positive_bg1"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:visibility="visible"/>

    </LinearLayout>

    <LinearLayout
      android:id="@+id/verticalBtnLayout"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginTop="28dp"
      android:layout_below="@id/content"
      android:orientation="vertical"
      android:visibility="gone"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintTop_toBottomOf="@id/content"
      tools:visibility="visible">

      <Button
        android:id="@+id/btn1"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:focusable="true"
        android:nextFocusUp="@id/btn1"
        android:nextFocusLeft="@id/btn1"
        android:nextFocusRight="@id/btn1"
        android:background="@drawable/dialog_button_positive_bg"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:visibility="gone"
        tools:text="sdsfdfdf"
        tools:visibility="visible">
        <requestFocus/>
      </Button>

      <Button
        android:id="@+id/btn2"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:focusable="true"
        android:nextFocusLeft="@id/btn2"
        android:nextFocusRight="@id/btn2"
        android:background="@drawable/dialog_button_positive_bg"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:visibility="gone"
        tools:text="sdsfdfdf"
        tools:visibility="visible"/>
      <Button
        android:id="@+id/btn3"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:focusable="true"
        android:nextFocusLeft="@id/btn3"
        android:nextFocusRight="@id/btn3"
        android:nextFocusDown="@id/btn3"
        android:background="@drawable/dialog_button_positive_bg"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:visibility="gone"
        tools:text="sdsfdfdf"
        tools:visibility="visible"/>
    </LinearLayout>

  </android.support.constraint.ConstraintLayout>

  <ImageView
    android:id="@+id/dialog_close"
    android:layout_width="36dp"
    android:layout_height="36dp"
    android:src="@drawable/ic_dialog_close"
    android:visibility="gone"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toTopOf="parent"/>

</android.support.constraint.ConstraintLayout>