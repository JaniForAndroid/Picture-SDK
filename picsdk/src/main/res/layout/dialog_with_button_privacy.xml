<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent">

  <android.support.constraint.ConstraintLayout
    android:id="@+id/cs_content"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_content_background2"
    app:layout_constraintHorizontal_bias="0.0"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toBottomOf="@id/dialog_close">


    <TextView
      android:id="@+id/title"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="20dp"
      android:textColor="#333333"
      android:textSize="16sp"
      android:textStyle="bold"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      tools:text="标题文字" />

    <com.namibox.commonlib.view.CustomHeightScrollView
      android:id="@+id/contentLayout"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="15dp"
      android:scrollbars="none"
      app:height_percent="0.35"
      android:maxHeight="280dp"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintTop_toBottomOf="@id/title">
      <TextView
        android:id="@+id/content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:lineSpacingExtra="1dp"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:textColor="#666666"
        android:textSize="14sp"
        tools:text="内容内容内容内\n容内容内容内容内容内容内" />

    </com.namibox.commonlib.view.CustomHeightScrollView>


    <LinearLayout
      android:id="@+id/horizontalBtnLayout"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginTop="30dp"
      android:orientation="horizontal"
      android:gravity="center"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintTop_toBottomOf="@id/contentLayout">

      <Button
        android:id="@+id/btnHorizontal1"
        android:layout_width="124dp"
        android:layout_height="40dp"
        style="?android:attr/borderlessButtonStyle"
        android:background="@drawable/bg_dialog_btn_left"
        android:text="继续抢红包的的"
        android:textColor="#333333"
        android:textSize="14sp"
        android:visibility="visible">
      </Button>

      <Button
        android:id="@+id/btnHorizontal2"
        android:layout_width="124dp"
        android:layout_height="40dp"
        style="?android:attr/borderlessButtonStyle"
        android:layout_marginLeft="14dp"
        android:background="@drawable/bg_dialog_btn_right"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:visibility="visible" />

    </LinearLayout>

    <View
      android:layout_width="wrap_content"
      android:layout_height="20dp"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintTop_toBottomOf="@id/horizontalBtnLayout"/>

    <TextView
      android:id="@+id/cancel_exit"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:paddingTop="15dp"
      android:paddingBottom="15dp"
      android:text="不同意直接退出"
      android:textColor="#999"
      android:textSize="12sp"
      android:visibility="gone"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/horizontalBtnLayout"
      tools:visibility="visible" />

  </android.support.constraint.ConstraintLayout>

  <ImageView
    android:id="@+id/dialog_close"
    android:layout_width="36dp"
    android:layout_height="36dp"
    android:src="@drawable/ic_dialog_close"
    android:visibility="gone"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    tools:visibility="visible" />

</android.support.constraint.ConstraintLayout>