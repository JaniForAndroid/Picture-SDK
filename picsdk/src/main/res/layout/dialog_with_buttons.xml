<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent">

  <android.support.constraint.ConstraintLayout
    android:id="@+id/cs_content"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_content_background2"
    app:layout_constraintHorizontal_bias="0.0"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toBottomOf="@id/iv_close">

    <View
      android:id="@+id/view_top_bg"
      android:layout_width="0dp"
      android:layout_height="0dp"
      android:background="@drawable/dialog_top_bg"
      app:layout_constraintBottom_toBottomOf="@id/iv_notice"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
      android:id="@+id/iv_notice"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:paddingBottom="6dp"
      android:adjustViewBounds="true"
      android:src="@drawable/ic_notic_1"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintWidth_percent="0.2131"/>

    <TextView
      android:id="@+id/tv_title"
      android:textStyle="bold"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textColor="#00B9FF"
      android:textSize="18sp"
      app:layout_constraintBottom_toBottomOf="@id/view_top_bg"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintTop_toTopOf="@id/view_top_bg"
      tools:text="标题文字"/>

    <ImageView
      android:id="@+id/iv_content"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:adjustViewBounds="true"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintTop_toBottomOf="@id/view_top_bg"/>

    <TextView
      android:id="@+id/tv_content"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="29dp"
      android:paddingLeft="25dp"
      android:paddingRight="25dp"
      android:gravity="center"
      android:lineSpacingExtra="1dp"
      android:textColor="#666666"
      android:textSize="14sp"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintTop_toBottomOf="@id/iv_content"
      tools:text="内容内容内容内\n容内容内容内容内容内容内"/>

    <Space
      android:id="@+id/space"
      android:layout_width="wrap_content"
      android:layout_height="40dp"
      app:layout_constraintBottom_toBottomOf="@id/rv"/>

    <ImageView
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginTop="-20dp"
      android:adjustViewBounds="true"
      android:src="@drawable/ic_notice_2"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintTop_toTopOf="@id/space"
      app:layout_constraintWidth_percent="0.23"/>

    <android.support.v7.widget.RecyclerView
      android:id="@+id/rv"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginTop="28dp"
      android:overScrollMode="never"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintTop_toBottomOf="@id/tv_content"
      app:layout_constraintWidth_percent="0.641">

    </android.support.v7.widget.RecyclerView>

  </android.support.constraint.ConstraintLayout>

  <ImageView
    android:id="@+id/iv_close"
    android:layout_width="36dp"
    android:layout_height="36dp"
    android:src="@drawable/ic_dialog_close"
    android:visibility="visible"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toTopOf="parent"/>

</android.support.constraint.ConstraintLayout>