<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent">

  <android.support.constraint.ConstraintLayout
    android:id="@+id/cs_content"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_content_background2"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toBottomOf="@id/iv_close">

    <View
      android:id="@+id/view_top_bg"
      android:layout_width="0dp"
      android:layout_height="0dp"
      android:background="@drawable/dialog_top_bg"
      app:layout_constraintBottom_toBottomOf="@id/iv_notice"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
      android:id="@+id/iv_notice"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:paddingBottom="6dp"
      android:adjustViewBounds="true"
      android:src="@drawable/ic_notic_1"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintWidth_percent="0.2131"/>

    <TextView
      android:id="@+id/tv_title"
      android:textStyle="bold"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:paddingLeft="24dp"
      android:paddingRight="24dp"
      android:textColor="#00B9FF"
      android:textSize="18sp"
      android:maxLines="2"
      android:ellipsize="end"
      app:layout_constraintBottom_toBottomOf="@id/view_top_bg"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintTop_toTopOf="@id/view_top_bg"
      tools:text="标题文字"/>

    <ImageView
      android:id="@+id/iv_content"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:adjustViewBounds="true"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintTop_toBottomOf="@id/view_top_bg"/>

    <TextView
      android:id="@+id/tv_content"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="15dp"
      android:paddingLeft="25dp"
      android:paddingRight="25dp"
      android:gravity="left"
      android:lineSpacingExtra="1dp"
      android:textColor="#666666"
      android:textSize="14sp"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintTop_toBottomOf="@id/iv_content"
      tools:text="内容内容内容内容内容内容内容内容内容内"/>

    <ImageView
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginTop="26dp"
      android:adjustViewBounds="true"
      android:src="@drawable/ic_notice_2"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintTop_toBottomOf="@id/tv_content"
      app:layout_constraintWidth_percent="0.23"/>

    <Button
      android:id="@+id/button"
      android:layout_width="0dp"
      android:layout_height="48dp"
      android:layout_marginTop="30dp"
      android:layout_marginBottom="36dp"
      android:layout_marginLeft="24dp"
      android:layout_marginRight="24dp"
      android:background="@drawable/dialog_button_positive_bg"
      android:textColor="#ffffff"
      android:textSize="16sp"
      android:visibility="visible"
      android:textAllCaps="false"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintTop_toBottomOf="@id/tv_content"
      tools:text="button"
      tools:visibility="gone"/>

    <Button
      android:id="@+id/button1"
      android:layout_width="0dp"
      android:layout_height="48dp"
      android:layout_marginTop="30dp"
      android:layout_marginBottom="36dp"
      android:layout_marginLeft="24dp"
      android:layout_marginRight="6dp"
      android:background="@drawable/dialog_button_negative_bg"
      android:textColor="@color/theme_color"
      android:textSize="16sp"
      android:textAllCaps="false"
      app:layout_constraintHorizontal_chainStyle="packed"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toLeftOf="@id/button2"
      app:layout_constraintTop_toBottomOf="@id/tv_content"
      tools:text="button1"/>

    <Button
      android:id="@+id/button2"
      android:layout_width="0dp"
      android:layout_height="48dp"
      android:layout_marginLeft="10dp"
      android:layout_marginRight="24dp"
      android:background="@drawable/dialog_button_positive_bg"
      android:textColor="#ffffff"
      android:textSize="16sp"
      android:textAllCaps="false"
      app:layout_constraintLeft_toRightOf="@id/button1"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintTop_toTopOf="@id/button1"
      tools:text="button2"/>

  </android.support.constraint.ConstraintLayout>

  <ImageView
    android:id="@+id/iv_close"
    android:layout_width="36dp"
    android:layout_height="36dp"
    android:src="@drawable/ic_dialog_close"
    android:visibility="visible"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toTopOf="parent"/>

</android.support.constraint.ConstraintLayout>