<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:clickable="true">

  <RelativeLayout
    android:id="@+id/image_qr_layout"
    android:layout_width="0dp"
    android:layout_height="0dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintDimensionRatio="4:5"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintWidth_percent="@dimen/dialog_big_image">
    <ImageView
      android:id="@+id/image_large"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_margin="10dp"
      />
  </RelativeLayout>


  <ImageView
    android:id="@+id/close_large"
    android:layout_width="20dp"
    android:layout_height="20dp"
    android:visibility="invisible"
    android:src="@drawable/dialog_icon_close"
    app:layout_constraintBottom_toTopOf="@id/image_qr_layout"
    app:layout_constraintLeft_toRightOf="@id/image_qr_layout"
    app:layout_constraintRight_toRightOf="@id/image_qr_layout"
    app:layout_constraintTop_toTopOf="@id/image_qr_layout"/>
</android.support.constraint.ConstraintLayout>