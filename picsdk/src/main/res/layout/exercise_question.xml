<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:gravity="center"
  android:paddingTop="20dp"
  android:paddingBottom="20dp">

  <TextView
    android:id="@+id/tv_title"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:textColor="#FF333333"
    android:textSize="15sp"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    tools:text="fhdksjgjhklsjgflksj" />

  <LinearLayout
    android:id="@+id/ll_attach"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_horizontal"
    app:layout_constraintLeft_toLeftOf="@id/tv_title"
    app:layout_constraintRight_toRightOf="@id/tv_title"
    app:layout_constraintTop_toBottomOf="@id/tv_title">

    <ImageView
      android:id="@+id/iv_voice_1"
      android:layout_width="30dp"
      android:layout_height="30dp"
      android:layout_marginTop="15dp"
      android:scaleType="fitXY"
      android:src="@drawable/icon_audio_enabled"
      android:visibility="gone"
      tools:visibility="visible" />

    <TextView
      android:id="@+id/tv_attach"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginLeft="11dp"
      android:textColor="#FF333333"
      android:textSize="18sp"
      android:layout_marginTop="15dp"
      android:textStyle="bold"
      android:visibility="gone"
      app:layout_goneMarginStart="0dp"
      tools:text="thankthankthanktkthankthanktkthankthaa"
      tools:visibility="visible" />

  </LinearLayout>

  <ImageView
    android:id="@+id/iv_attach"
    android:layout_width="124dp"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    android:adjustViewBounds="true"
    android:visibility="gone"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toBottomOf="@id/ll_attach"
    tools:src="@drawable/ic_cloud_1"
    tools:visibility="visible" />

  <LinearLayout
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_horizontal"
    app:layout_constraintLeft_toLeftOf="@id/tv_title"
    app:layout_constraintRight_toRightOf="@id/tv_title"
    app:layout_constraintTop_toBottomOf="@id/iv_attach">

    <ImageView
      android:id="@+id/iv_voice_2"
      android:layout_width="30dp"
      android:layout_height="30dp"
      android:layout_marginTop="15dp"
      android:scaleType="fitXY"
      android:src="@drawable/icon_audio_enabled"
      android:visibility="gone"
      tools:visibility="visible" />

    <TextView
      android:id="@+id/tv_input"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginLeft="11dp"
      android:textColor="#FF333333"
      android:textSize="18sp"
      android:layout_marginTop="15dp"
      android:textStyle="bold"
      android:visibility="gone"
      app:layout_goneMarginStart="0dp"
      tools:text="thankthankthanktkthankthanktkthankthaa"
      tools:visibility="visible" />

  </LinearLayout>


</android.support.constraint.ConstraintLayout>