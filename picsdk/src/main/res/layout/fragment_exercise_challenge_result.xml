<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:paddingTop="25dp"
  tools:background="#ddd">

  <TextView
    android:id="@+id/tv_total"
    android:layout_width="wrap_content"
    android:layout_height="28dp"
    android:layout_marginTop="5dp"
    android:background="@drawable/bg_radius_rect_white"
    android:gravity="center"
    android:paddingLeft="40dp"
    android:paddingRight="20dp"
    android:text="0"
    android:visibility="gone"
    android:textColor="#FF333333"
    android:textSize="15sp"
    app:layout_constraintHorizontal_bias="0.952"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toTopOf="parent" />

  <ImageView
    android:id="@+id/iv_total"
    android:layout_width="34dp"
    android:layout_height="34dp"
    android:background="@drawable/bg_radius_rect_white"
    android:padding="5dp"
    android:scaleType="fitXY"
    android:visibility="gone"
    android:src="@drawable/ic_star"
    app:layout_constraintBottom_toBottomOf="@id/tv_total"
    app:layout_constraintLeft_toLeftOf="@id/tv_total"
    app:layout_constraintTop_toTopOf="@id/tv_total" />

  <View
    android:id="@+id/view_content_bg"
    android:layout_width="0dp"
    android:layout_height="0dp"
    android:background="@drawable/shadow"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintDimensionRatio="280:360"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintVertical_bias="0.75"
    app:layout_constraintWidth_percent="0.8" />

  <ImageView
    android:id="@+id/iv_challenge_result"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:adjustViewBounds="true"
    android:src="@drawable/ic_challenge_fail"
    app:layout_constraintBottom_toTopOf="@id/iv_star"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintWidth_percent="0.856" />

  <ImageView
    android:id="@+id/iv_star"
    android:layout_width="0dp"
    android:layout_height="0dp"
    android:scaleType="fitXY"
    android:src="@drawable/ic_star_gray"
    app:layout_constraintBottom_toBottomOf="@id/view_content_bg"
    app:layout_constraintDimensionRatio="238:110"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toTopOf="@id/view_content_bg"
    app:layout_constraintVertical_bias="0.125"
    app:layout_constraintWidth_percent="0.65" />

  <ImageView
    android:id="@+id/iv_star_1"
    android:layout_width="0dp"
    android:layout_height="0dp"
    android:src="@drawable/ic_star_1"
    android:visibility="gone"
    app:layout_constraintBottom_toBottomOf="@id/iv_star"
    app:layout_constraintDimensionRatio="1:1"
    app:layout_constraintLeft_toLeftOf="@id/iv_star"
    app:layout_constraintWidth_percent="0.195"
    tools:visibility="visible" />

  <ImageView
    android:id="@+id/iv_star_2"
    android:layout_width="0dp"
    android:layout_height="0dp"
    android:src="@drawable/ic_star_2"
    android:visibility="gone"
    app:layout_constraintDimensionRatio="1:1"
    app:layout_constraintLeft_toLeftOf="@id/iv_star"
    app:layout_constraintRight_toRightOf="@id/iv_star"
    app:layout_constraintTop_toTopOf="@id/iv_star"
    app:layout_constraintWidth_percent="0.23"
    tools:visibility="visible" />

  <ImageView
    android:id="@+id/iv_star_3"
    android:layout_width="0dp"
    android:layout_height="0dp"
    android:src="@drawable/ic_star_3"
    android:visibility="gone"
    app:layout_constraintBottom_toBottomOf="@id/iv_star"
    app:layout_constraintDimensionRatio="1:1"
    app:layout_constraintRight_toRightOf="@id/iv_star"
    app:layout_constraintWidth_percent="0.195"
    tools:visibility="visible" />

  <TextView
    android:id="@+id/view_gray_bg"
    android:layout_width="0dp"
    android:layout_height="46dp"
    android:background="@drawable/sp_gray_radius_10"
    app:layout_constraintBottom_toBottomOf="@id/view_content_bg"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toTopOf="@id/view_content_bg"
    app:layout_constraintVertical_bias="0.554"
    app:layout_constraintWidth_percent="0.6" />

  <TextView
    android:id="@+id/tv_correct_count"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="15dp"
    android:drawableLeft="@drawable/ic_side_correct_number"
    android:drawablePadding="5dp"
    android:gravity="center"
    android:textColor="#FF666666"
    android:textSize="15sp"
    android:textStyle="bold"
    app:layout_constraintBottom_toBottomOf="@id/view_gray_bg"
    app:layout_constraintLeft_toLeftOf="@id/view_gray_bg"
    app:layout_constraintTop_toTopOf="@id/view_gray_bg"
    tools:text="9/9" />

  <TextView
    android:id="@+id/tv_answer_time"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:drawableLeft="@drawable/ic_side_time"
    android:drawablePadding="5dp"
    android:gravity="center"
    android:textColor="#FF666666"
    android:textSize="15sp"
    android:textStyle="bold"
    app:layout_constraintBottom_toBottomOf="@id/view_gray_bg"
    app:layout_constraintRight_toRightOf="@id/view_gray_bg"
    app:layout_constraintTop_toTopOf="@id/view_gray_bg"
    tools:text="12.06秒" />

  <ImageView
    android:layout_width="0dp"
    android:layout_height="0dp"
    android:src="@drawable/ic_best_grade"
    android:visibility="gone"
    app:layout_constraintBottom_toBottomOf="@id/view_content_bg"
    app:layout_constraintDimensionRatio="1:1"
    app:layout_constraintHorizontal_bias="0.95"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toTopOf="@id/view_content_bg"
    app:layout_constraintVertical_bias="0.7"
    app:layout_constraintWidth_percent="0.1973"
    tools:visibility="visible" />

