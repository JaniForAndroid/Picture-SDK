  <TextView
    android:id="@+id/tv_more_effort"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textColor="#999999"
    android:textSize="12sp"
      android:gravity="center"
      android:text="再努力一点就胜利了"
      android:layout_marginTop="30dp"
    app:layout_constraintTop_toBottomOf="@id/view_gray_bg"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"/>

  <LinearLayout
    android:id="@+id/button_layout"
    android:layout_width="240dp"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    app:layout_constraintBottom_toBottomOf="@id/view_content_bg"
    app:layout_constraintLeft_toLeftOf="@id/view_content_bg"
    app:layout_constraintRight_toRightOf="@id/view_content_bg"
    app:layout_constraintTop_toTopOf="@id/view_content_bg"
    app:layout_constraintVertical_bias="0.85">

    <TextView
      android:id="@+id/tv_again"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:background="@drawable/blue_round_corner"
      android:gravity="center"
      android:paddingLeft="16dp"
      android:paddingTop="11dp"
      android:paddingRight="16dp"
      android:paddingBottom="11dp"
      android:text="再来一次"
      android:textColor="#fff"
      android:textSize="18sp"
      android:textStyle="bold" />

    <TextView
      android:id="@+id/tv_continue"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginLeft="20dp"
      android:layout_weight="1"
      android:background="@drawable/green_round_corner"
      android:gravity="center"
      android:paddingLeft="16dp"
      android:paddingTop="11dp"
      android:paddingRight="16dp"
      android:paddingBottom="11dp"
      android:text="继续"
      android:textColor="#fff"
      android:textSize="18sp"
      android:textStyle="bold"
      android:visibility="gone"
      tools:visibility="visible" />
  </LinearLayout>

  <ImageView
      android:id="@+id/best_icon"
      android:layout_width="74dp"
      android:layout_height="74dp"
      android:layout_marginRight="15dp"
      android:visibility="gone"
      android:src="@drawable/histroy_best"
      app:layout_constraintBottom_toTopOf="@+id/button_layout"
      app:layout_constraintRight_toRightOf="parent"/>

  <android.support.constraint.ConstraintLayout
      android:id="@+id/animationLayout"
      android:layout_width="0dp"
      android:layout_height="0dp"
      android:background="#7F000000"
      android:visibility="gone"
      tools:visibility="visible"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintBottom_toBottomOf="parent">
    <TextView
      android:id="@+id/tv_timer"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      android:layout_marginEnd="12dp"
      android:layout_marginTop="35dp"
      android:text="3s"
      android:textColor="#ffffff"
      android:textSize="14sp"
      android:background="@drawable/bg_challenge_timer"
      android:paddingTop="6.5dp"
      android:paddingBottom="6.5dp"
      android:paddingStart="17.5dp"
      android:paddingEnd="17.5dp"
      android:visibility="gone"
      />

    <com.airbnb.lottie.LottieAnimationView
      android:id="@+id/loading_anim"
      android:layout_width="0dp"
      android:layout_height="0dp"
      android:visibility="visible"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/first_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:gravity="center"
        android:text="@string/challenge_tip"
        android:textStyle="bold"
        android:visibility="gone"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintVertical_bias="0.83"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/score"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <ImageView
        android:id="@+id/score"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/icon_score_first"
        android:visibility="gone"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        app:layout_constraintVertical_bias="0.63"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/first_text"
        app:layout_constraintRight_toLeftOf="@id/first_text2"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/first_text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:gravity="center"
        android:textStyle="bold"
        android:visibility="gone"
        app:layout_constraintVertical_bias="0.9"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/score"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />
  </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>