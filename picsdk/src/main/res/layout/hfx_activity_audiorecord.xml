<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="#F1F8FE"
  tools:context=".ui.StoryRecordActivity">

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <FrameLayout
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:layout_weight="4">
      <ImageView

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="10dp"
        android:scaleType="centerCrop"
        android:src="@drawable/hfx_story_wave_bg" />
      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="60dp"
        android:orientation="vertical">
        <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content">
          <TextView
            android:id="@+id/recordTimeTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="00:00"
            android:textColor="@color/hfx_white"
            android:textSize="44dp" />
          <ImageView
            android:id="@+id/resetImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:src="@drawable/hfx_reset_enable" />

          <ImageView
            android:id="@+id/enterCutMode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:src="@drawable/hfx_cut_enable" />

        </RelativeLayout>


        <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="20dp"
          android:layout_gravity="center_horizontal">

          <ImageView
            android:id="@+id/recImg"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_gravity="center"
            android:src="@drawable/hfx_img_red" />

          <TextView
            android:id="@+id/recText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="REC"
            android:textColor="@color/hfx_red"
            android:textSize="14dp" />
        </LinearLayout>


        <FrameLayout
          android:layout_width="match_parent"
          android:layout_height="0dp"
          android:layout_weight="1">
          <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="6dp"
            android:paddingBottom="10dp">
            <View
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#33ffffff" />
            <View
              android:layout_width="match_parent"
              android:layout_height="0.3dp"
              android:background="@color/hfx_white" />
            <View
              android:layout_width="match_parent"
              android:layout_height="3dp"
              android:layout_centerVertical="true"
              android:background="@drawable/hfx_dash_line"
              android:layerType="software" />

          </RelativeLayout>

          <com.namibox.hfx.view.NewWaveView
            android:id="@+id/wave_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />


          <com.namibox.hfx.view.RecordWaveView
            android:id="@+id/record_wave_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        </FrameLayout>
      </LinearLayout>
    </FrameLayout>


    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:layout_weight="4"
      android:orientation="vertical">


      <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="130dp">

        <ImageView
          android:id="@+id/recBtn"
          android:layout_width="90dp"
          android:layout_height="90dp"
          android:layout_centerInParent="true"
          android:layout_gravity="center_horizontal"
          android:scaleType="fitCenter"
          android:src="@drawable/hfx_ic_rec" />

        <LinearLayout
          android:id="@+id/playControllerLayout"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginRight="48dp"
          android:layout_centerVertical="true"
          android:layout_toLeftOf="@+id/recBtn"
          android:paddingTop="10dp"
          android:orientation="vertical">
          <ImageView
            android:id="@+id/playController"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="fitCenter"
            android:src="@drawable/hfx_ic_play_124" />

          <TextView
            android:id="@+id/playControllerTv"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="播放"
            android:textColor="@color/theme_color"
            android:textSize="10dp" />
        </LinearLayout>


        <LinearLayout
          android:id="@+id/saveLayout"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="48dp"
          android:layout_centerVertical="true"
          android:layout_toRightOf="@+id/recBtn"
          android:paddingTop="10dp"
          android:orientation="vertical">
          <ImageView
            android:id="@+id/saveImg"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="fitCenter"
            android:src="@drawable/hfx_ic_save_enable" />

          <TextView
            android:id="@+id/saveTv"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/hfx_completion"
            android:textColor="@color/theme_color"
            android:textSize="10dp" />
        </LinearLayout>
      </RelativeLayout>


      <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
          android:id="@+id/recordLayout"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:orientation="vertical">
          <android.support.v7.widget.RecyclerView
            android:id="@+id/voiceBgRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="100"
            android:layout_marginBottom="16dp"
            android:paddingLeft="5dp"
            android:clipToPadding="false"
            android:minHeight="120dp"></android.support.v7.widget.RecyclerView>

          <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="100"
            android:orientation="horizontal">
            <ImageView
              android:id="@+id/volumeIcon"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginLeft="16dp"
              android:layout_centerVertical="true"
              android:layout_gravity="center_horizontal"
              android:src="@drawable/hfx_icon_volume" />

            <TextView
              android:id="@+id/volume"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginRight="16dp"
              android:layout_alignParentRight="true"
              android:layout_centerVertical="true"
              android:text="25%"
              android:textColor="#333333"
              android:textSize="16dp" />
            <SeekBar
              android:id="@+id/seekbar"
              android:layout_width="200dp"
              android:layout_height="wrap_content"
              android:layout_marginLeft="8dp"
              android:layout_marginRight="8dp"
              android:layout_centerInParent="true"
              android:layout_gravity="center"
              android:layout_toLeftOf="@id/volume"
              android:layout_toRightOf="@id/volumeIcon"
              android:paddingLeft="16dp"
              android:paddingRight="16dp"
              android:max="100"
              android:maxHeight="3dp"
              android:minHeight="3dp"
              android:progressDrawable="@drawable/hfx_seekbar_line"
              android:thumb="@drawable/hfx_ic_schedule_102px" />


          </RelativeLayout>
        </LinearLayout>
        <!--确认布局-->
        <LinearLayout
          android:id="@+id/confirmCutLayout"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:paddingLeft="32dp"
          android:paddingRight="32dp"
          android:gravity="center"
          android:orientation="vertical"
          android:visibility="gone">

          <TextView
            android:id="@+id/cancelCatBtn"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/hfx_btn_done_border"
            android:gravity="center"
            android:text="@string/hfx_cut_cancel"
            android:textColor="@color/theme_color"
            android:textSize="18sp" />

          <TextView
            android:id="@+id/confirmCutBtn"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/hfx_btn_done"
            android:gravity="center"
            android:text="@string/hfx_cut_confirm"
            android:textColor="@color/hfx_white"
            android:textSize="18sp" />


        </LinearLayout>
      </FrameLayout>
    </LinearLayout>

  </LinearLayout>
  <include
    android:id="@+id/toolbar_layout"
    layout="@layout/layout_custom_actionbar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" />

</FrameLayout>