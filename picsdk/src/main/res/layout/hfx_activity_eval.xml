<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  xmlns:voiceView="http://schemas.android.com/apk/res-auto"
  android:id="@+id/clRoot"
  android:layout_width="match_parent"
  android:layout_height="match_parent">
  <android.support.constraint.Guideline
    android:id="@+id/h_guideline"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    app:layout_constraintGuide_percent="0.6"/>

  <RelativeLayout
    android:id="@+id/bg_layout"
    android:layout_width="0dp"
    android:layout_height="0dp"
    app:layout_constraintBottom_toTopOf="@+id/bottomLayoutPortrait"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/topLayout">
    <ImageView
      android:id="@+id/view_pager_bg_img"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_alignParentBottom="true"
      android:adjustViewBounds="true"
      android:background="@drawable/hfx_ic_eval_bg"
      />
  </RelativeLayout>

  <com.namibox.commonlib.view.HackyViewPager
    android:id="@+id/viewPager"
    android:layout_width="0dp"
    android:layout_height="0dp"
    app:layout_constraintBottom_toTopOf="@+id/bottomLayoutPortrait"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/topLayout"/>

  <android.support.constraint.ConstraintLayout
    android:id="@+id/topLayout"
    android:layout_width="0dp"
    android:layout_height="65dp"
    android:background="#fff"
    app:layout_constraintBottom_toTopOf="@+id/viewPager"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    tools:background="#33333333">

    <View
      android:layout_width="0dp"
      android:layout_height="0.5dp"
      android:background="#333"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="parent"/>
    <ImageView
      android:id="@+id/iv_back"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginLeft="10dp"
      android:layout_marginRight="10dp"
      android:contentDescription="@null"
      android:src="@drawable/ic_arrow_back_black"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toLeftOf="@+id/tvPageIndex"
      app:layout_constraintTop_toTopOf="parent"/>

    <TextView
      android:id="@+id/tvPageIndex"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textColor="#333333"
      android:textSize="18sp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintLeft_toRightOf="@+id/iv_back"
      app:layout_constraintRight_toLeftOf="@+id/divider"
      app:layout_constraintTop_toTopOf="parent"
      tools:text="13/15"/>

    <View
      android:id="@+id/divider"
      android:layout_width="1dp"
      android:layout_height="20dp"
      android:layout_marginLeft="10dp"
      android:layout_marginRight="10dp"
      android:background="#e5e5e5"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintLeft_toRightOf="@+id/tvPageIndex"
      app:layout_constraintRight_toLeftOf="@+id/scoreList"
      app:layout_constraintTop_toTopOf="parent"/>

    <android.support.v7.widget.RecyclerView
      android:id="@+id/scoreList"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintHorizontal_weight="1"
      app:layout_constraintLeft_toRightOf="@+id/divider"
      app:layout_constraintRight_toLeftOf="@+id/submit_btn"
      app:layout_constraintTop_toTopOf="parent"/>

    <Button
      android:id="@+id/submit_btn"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginLeft="10dp"
      android:layout_marginRight="10dp"
      android:background="@drawable/hfx_btn_commit"
      android:gravity="center"
      android:textAllCaps="false"
      android:text="@string/hfx_commit"
      android:textColor="@android:color/white"
      android:textSize="12sp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintLeft_toRightOf="@+id/scoreList"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintTop_toTopOf="parent"/>

  </android.support.constraint.ConstraintLayout>

  <include
    android:id="@+id/bottomLayoutPortrait"
    layout="@layout/hfx_eval_bottom"
    android:layout_width="0dp"
    android:layout_height="250dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/viewPager"/>

  <include
    android:id="@+id/bottomLayoutLand"
    layout="@layout/hfx_eval_bottom_land"
    android:layout_width="0dp"
    android:layout_height="100dp"
    android:visibility="gone"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/viewPager"/>


  <FrameLayout
    android:id="@+id/commit_layout"
    android:layout_width="0dp"
    android:layout_height="0dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toTopOf="parent"/>


  <com.carlos.voiceline.mylibrary.VoiceLineView
    android:id="@+id/voiceLine"
    android:layout_width="0dp"
    android:layout_height="60dp"
    android:visibility="invisible"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    voiceView:fineness="three"
    voiceView:middleLine="@color/theme_color"
    voiceView:middleLineHeight="1dp"
    voiceView:rectSpace="2dp"
    voiceView:rectWidth="5dp"
    voiceView:sensibility="four"
    voiceView:viewMode="line"
    voiceView:voiceLine="@color/theme_color"/>

  <FrameLayout
    android:id="@+id/readyLayout"
    android:layout_width="0dp"
    android:layout_height="0dp"
    android:clickable="true"
    android:focusable="true"
    android:visibility="gone"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <TextView
      android:id="@+id/tvCountDown"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="center"
      android:background="@drawable/hfx_ic_eval_ready"
      android:gravity="center"
      android:textColor="#fff"
      android:textSize="18sp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      tools:text="Ready"/>

  </FrameLayout>

  <FrameLayout
    android:id="@+id/listening_layout"
    android:layout_width="0dp"
    android:layout_height="0dp"
    android:paddingBottom="30dp"
    android:clickable="true"
    android:focusable="true"
    android:visibility="gone"
    app:layout_constraintBottom_toBottomOf="@+id/h_guideline"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <com.namibox.hfx.view.RoundProgressBar
      android:id="@+id/listening_progress"
      android:layout_width="90dp"
      android:layout_height="90dp"
      android:layout_gravity="center|bottom"/>

    <ImageView
      android:id="@+id/listening_stop"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_margin="10dp"
      android:layout_gravity="center|bottom"
      android:padding="8dp"
      android:src="@drawable/hfx_ic_action_pause"/>
  </FrameLayout>

  <android.support.constraint.ConstraintLayout
    android:id="@+id/guideLayout"
    android:layout_width="0dp"
    android:layout_height="0dp"
    android:clickable="true"
    android:focusable="true"
    android:visibility="gone"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    tools:visibility="visible">

    <com.namibox.commonlib.view.FocusView
      android:id="@+id/focus_view"
      android:layout_width="0dp"
      android:layout_height="0dp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintTop_toTopOf="parent"/>

    <View
      android:id="@+id/guideBg"
      android:layout_width="178dp"
      android:layout_height="62dp"
      android:background="@drawable/hfx_eval_guide_bg"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintTop_toTopOf="parent"/>

    <TextView
      android:id="@+id/tvGuideText"
      android:layout_width="168dp"
      android:layout_height="52dp"
      android:paddingLeft="20dp"
      android:paddingRight="20dp"
      android:background="@drawable/hfx_eval_guide_text_bg"
      android:gravity="center_vertical"
      android:textColor="#333333"
      android:textSize="14sp"
      app:layout_constraintBottom_toBottomOf="@+id/guideBg"
      app:layout_constraintLeft_toLeftOf="@+id/guideBg"
      app:layout_constraintRight_toRightOf="@+id/guideBg"
      app:layout_constraintTop_toTopOf="@+id/guideBg"
      tools:text="点击这里可以听原声音频哦。"/>

    <TextView
      android:id="@+id/tvKnow"
      android:layout_width="95dp"
      android:layout_height="35dp"
      android:layout_marginBottom="15dp"
      android:layout_marginRight="5dp"
      android:background="@drawable/hfx_eval_guide_know_bg"
      android:gravity="center"
      android:text="@string/hfx_know"
      android:textColor="#fff"
      app:layout_constraintBottom_toTopOf="@+id/guideBg"
      app:layout_constraintRight_toRightOf="@+id/guideBg"/>

    <ImageView
      android:id="@+id/ivGuideArrow"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="10dp"
      android:contentDescription="@null"
      android:src="@drawable/hfx_guide_bottom_left"
      app:layout_constraintHorizontal_bias="0.3"
      app:layout_constraintLeft_toLeftOf="@+id/guideBg"
      app:layout_constraintRight_toRightOf="@+id/guideBg"
      app:layout_constraintTop_toBottomOf="@+id/guideBg"/>

  </android.support.constraint.ConstraintLayout>


</android.support.constraint.ConstraintLayout>