<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical">

  <ScrollView
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1">


    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical">

      <FrameLayout
        android:id="@+id/video_layout"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="#000">

        <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center"
          android:text="@string/player_loading"
          android:textColor="#fff" />

        <FrameLayout
          android:id="@+id/video_fragment"
          android:layout_width="match_parent"
          android:layout_height="match_parent"></FrameLayout>

        <ImageView
          android:id="@+id/back_btn"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_margin="8dp"
          android:background="@drawable/video_back_bg"
          android:padding="8dp"
          app:srcCompat="@drawable/ic_arrow_back_white" />
      </FrameLayout>
    <!-- 改造部分 老的布局中不用的部分-->

    <LinearLayout
        android:id="@+id/scoreLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
        android:id="@+id/videoTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:textColor="@color/theme_color"
        android:visibility="gone"
        android:textSize="18dp"
        tools:text="视频标题" />

        <View
        android:layout_width="20dp"
        android:layout_height="4dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:visibility="gone"
        android:background="@color/theme_color" />
        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        android:visibility="gone"
        android:background="@drawable/hfx_gray_white_button"
        android:orientation="vertical">

        <EditText
          android:id="@+id/introEt"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_margin="8dp"
          android:background="@null"
          android:gravity="top|left"
          android:hint="小朋友们,快来分享下你的心得体会吧~"
          android:maxLength="200"
          android:minLines="8"
          android:textSize="14dp" />

      </LinearLayout>
        <!--   新布局中要使用的布局    -->
        <android.support.constraint.ConstraintLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          tools:layout_editor_absoluteY="180dp">

        <android.support.constraint.Guideline
            android:id="@+id/top_guide_line"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.1" />

        <ImageView
            android:id="@+id/score_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/top_guide_line"
            tools:src="@drawable/hfx_video_stars_three" />

        <TextView
            android:id="@+id/title"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:gravity="center_horizontal"
            android:paddingRight="12dp"
            android:text="@string/book_dubcurrentrecord_title"
            android:textColor="#333"
            android:textSize="10sp"
            app:layout_constraintBottom_toBottomOf="@+id/score_img"
            app:layout_constraintHeight_percent="0.28"
            app:layout_constraintLeft_toLeftOf="@+id/score_img"
            app:layout_constraintRight_toRightOf="@+id/score_img"
            app:layout_constraintWidth_percent="0.18" />

        <TextView
            android:id="@+id/score_text"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:gravity="center_horizontal"
            android:paddingRight="12dp"
            android:text="90分"
            android:textColor="#333"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@+id/score_img"
            app:layout_constraintHeight_percent="0.22"
            app:layout_constraintLeft_toLeftOf="@+id/score_img"
            app:layout_constraintRight_toRightOf="@+id/score_img"
            app:layout_constraintWidth_percent="0.18" />
      </android.support.constraint.ConstraintLayout>
        <!-- 流畅度-->
        <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal"
       android:layout_marginLeft="20dp"
       android:layout_marginRight="20dp"
       android:padding="10dp"
       android:gravity="center">
       <TextView
         android:layout_width="0dp"
         android:layout_height="wrap_content"
         android:layout_weight="2"
         android:text="@string/book_dubfluency_title"
         android:textSize="15sp"
         android:gravity="center"
         android:textColor="#333"
         android:textStyle="bold"/>
       <ProgressBar
         android:id="@+id/progress1"
         android:layout_weight="6"
         style="?android:attr/progressBarStyleHorizontal"
         android:layout_width="0dp"
         android:layout_height="10dp"
         android:layout_gravity="center"
         android:max="100"
         android:progress="80"
         android:progressDrawable="@drawable/hfx_progress_blue" />
       <TextView
         android:id="@+id/fluency_score"
         android:layout_width="0dp"
         android:layout_height="wrap_content"
         android:layout_weight="2"
         android:gravity="center"
         android:text="80分"
         android:textColor="#333"/>
     </LinearLayout>
        <!-- 完整度-->
        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:padding="10dp"
        android:gravity="center">
        <TextView
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="2"
          android:text="@string/book_dubintegrity_title"
          android:textSize="15sp"
          android:gravity="center"
          android:textColor="#333"
          android:textStyle="bold"/>
        <ProgressBar
          android:id="@+id/progress2"
          android:layout_weight="6"
          style="?android:attr/progressBarStyleHorizontal"
          android:layout_width="0dp"
          android:layout_height="10dp"
          android:layout_gravity="center"
          android:max="100"
          android:progress="50"
          android:progressDrawable="@drawable/hfx_progress_blue" />
        <TextView
          android:id="@+id/pron_score"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="2"
          android:gravity="center"
          android:text="80分"
          android:textColor="#333"/>
      </LinearLayout>
        <!-- 准确度-->
        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:padding="10dp"
        android:gravity="center">
        <TextView
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="2"
          android:text="@string/book_dubaccuracy_title"
          android:textSize="15sp"
          android:gravity="center"
          android:textColor="#333"
          android:textStyle="bold"/>
        <ProgressBar
          android:id="@+id/progress3"
          android:layout_weight="6"
          style="?android:attr/progressBarStyleHorizontal"
          android:layout_width="0dp"
          android:layout_height="10dp"
          android:layout_gravity="center"
          android:max="100"
          android:progress="70"
          android:progressDrawable="@drawable/hfx_progress_blue" />
        <TextView
          android:id="@+id/integrity_score"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="2"
          android:gravity="center"
          android:text="80分"
          android:textColor="#333"/>
      </LinearLayout>
      </LinearLayout>
    </LinearLayout>
  </ScrollView>

  <LinearLayout
    android:id="@+id/button_layout"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_marginBottom="30dp"
    android:layout_marginLeft="43dp"
    android:layout_marginRight="43dp"
    android:orientation="horizontal">

    <Button
      android:id="@+id/saveBtn"
      android:layout_width="0dp"
      android:layout_height="44dp"
      android:layout_gravity="center"
      android:layout_marginRight="10dp"
      android:layout_weight="1"
      android:background="@drawable/hfx_btn_again"
      android:text="@string/book_dubtryagain_title"
      android:textColor="@color/white"
      android:textSize="18dp" />

    <Button
      android:id="@+id/submitBtn"
      android:layout_width="0dp"
      android:layout_height="44dp"
      android:layout_gravity="center"
      android:layout_marginLeft="10dp"
      android:layout_weight="1"
      android:background="@drawable/hfx_btn_public"
      android:text="@string/hfx_commit_work"
      android:textColor="@color/hfx_white"
      android:textSize="18dp" />

  </LinearLayout>


</LinearLayout>
