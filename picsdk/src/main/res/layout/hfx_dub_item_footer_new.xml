<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical">

  <LinearLayout
    android:id="@+id/top_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:background="@drawable/hfx_card_bg_selector_new"
    android:orientation="vertical" >

    <RelativeLayout
      android:id="@+id/index_layout"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:gravity="center_vertical"
      android:layout_marginTop="15dp"
      android:visibility="gone"
      tools:visibility="visible">
      <TextView
        android:id="@+id/cardIndex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="8dp"
        android:background="@drawable/hfx_index_shape"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:text="1/8"
        android:textColor="@color/hfx_voice_name_tv_color_0"
        android:textSize="10sp" />

      <TextView
        android:id="@+id/result_detail"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_alignParentRight="true"
        android:gravity="center_vertical"
        android:text="@string/book_dubevadetail_title"
        android:paddingLeft="10dp"
        android:paddingRight="5dp"
        android:textSize="12sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:visibility="invisible"
        tools:visibility="visible"
        android:background="@drawable/hfx_video_result_detail_shape"/>

    </RelativeLayout>

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal">

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
          android:id="@+id/english"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="16dp"
          android:gravity="left"
          android:textColor="@color/hfx_card_text_color"
          android:textSize="24sp"
          tools:text="aaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaa" />
        <com.namibox.hfx.view.WordScrollView
          android:id="@+id/world_score_recycler"
          android:layout_marginTop="16dp"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center"
          android:visibility="gone"
          />
        <TextView
          android:id="@+id/chinese"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="12dp"
          android:gravity="left"
          android:textColor="@color/hfx_card_text_color"
          android:textSize="15sp"
          tools:text="哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈" />
      </LinearLayout>


      <ImageView
        android:id="@+id/score"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:padding="8dp"
        android:visibility="gone"
        android:src="@drawable/hfx_card_bad_score" />

    </LinearLayout>

    <View
      android:layout_width="match_parent"
      android:layout_height="1px"
      android:layout_marginTop="16dp"
      android:visibility="gone"
      android:background="#cccccc" />
      <!--录音布局-->
      <RelativeLayout
        android:id="@+id/recording_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">
        <TextView
          android:id="@+id/record_text"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_alignParentTop="true"
          android:text="@string/book_wordevastart_title"
          android:textColor="#999"
          android:textSize="12sp"
          android:gravity="center_horizontal"/>
        <TextView
          android:id="@+id/duration"
          android:layout_width="40dp"
          android:layout_height="wrap_content"
          android:layout_gravity="center"
          android:gravity="center"
          android:textColor="@color/hfx_card_text_color"
          android:textSize="12dp"
          android:visibility="gone"
          tools:text="20.0s" />
        <ImageView
          android:id="@+id/pause"
          android:layout_toLeftOf="@+id/startRecord"
          android:layout_width="45dp"
          android:layout_height="45dp"
          android:layout_gravity="center"
          android:layout_centerVertical="true"
          android:layout_marginRight="60dp"
          android:src="@drawable/hfx_ic_play_souce"
          android:visibility="visible"
          tools:visibility="visible" />

        <ImageView
          android:id="@+id/play"
          android:layout_toRightOf="@+id/startRecord"
          android:layout_width="45dp"
          android:layout_height="45dp"
          android:layout_gravity="center"
          android:layout_marginLeft="60dp"
          android:src="@drawable/hfx_ic_my_voice"
          android:layout_centerVertical="true"
          android:visibility="visible"
          tools:visibility="visible" />
        <TextView
          android:id="@+id/play_text"
          android:layout_toRightOf="@+id/startRecord"
          android:layout_width="45dp"
          android:layout_height="45dp"
          android:layout_marginLeft="60dp"
          android:text="81"
          android:gravity="center"
          android:textColor="@color/white"
          android:textSize="24sp"
          android:layout_centerVertical="true"
          android:background="@drawable/hfx_result_round_green"
          android:visibility="gone"
          tools:visibility="visible" />
        <ImageView
          android:id="@+id/play_my_voice"
          android:layout_toRightOf="@+id/startRecord"
          android:layout_width="45dp"
          android:layout_height="45dp"
          android:layout_marginLeft="60dp"
          android:text="81"
          android:gravity="center"
          android:textColor="@color/white"
          android:textSize="24sp"
          android:layout_centerVertical="true"
          android:background="@drawable/hfx_my_voice_green"
          android:visibility="gone"
          tools:visibility="gone" />
        <ImageView
          android:id="@+id/result_stars"
          android:layout_toRightOf="@+id/startRecord"
          android:layout_width="55dp"
          android:layout_height="20dp"
          android:layout_gravity="center"
          android:layout_marginLeft="55dp"
          android:layout_marginTop="5dp"
          tools:src="@drawable/hfx_three_stars"
          android:visibility="invisible"
          tools:visibility="visible" />
        <ImageView
          android:id="@+id/startRecord"
          android:layout_below="@+id/record_text"
          android:layout_marginTop="30dp"
          android:layout_width="60dp"
          android:layout_height="60dp"
          android:layout_gravity="center"
          android:layout_centerHorizontal="true"
          android:layout_centerVertical="true"
          android:scaleType="fitCenter"
          android:src="@drawable/hfx_icon_record" />

      </RelativeLayout>

      <ProgressBar
        android:id="@+id/progress"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="4.4dp"
        android:layout_marginLeft="-3dp"
        android:layout_marginRight="-3dp"
        android:layout_gravity="center"
        android:max="100"
        android:progressDrawable="@drawable/hfx_card_progress_selector_new" />

    <View
      android:id="@+id/diliver"
      android:layout_width="match_parent"
      android:layout_height="1px"
      android:background="#cccccc"
      android:visibility="gone"/>
    </LinearLayout>
  <TextView
    android:id="@+id/score_text"
    android:layout_width="45dp"
    android:layout_height="40dp"
    android:layout_alignParentRight="true"
    android:text="33"
    android:gravity="right"
    android:paddingRight="5dp"
    android:textSize="15sp"
    android:textColor="@color/white"
    android:visibility="gone"
    tools:visibility="visible"
    android:background="@drawable/hfx_triangle_green"/>
  <RelativeLayout
    android:layout_below="@+id/top_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   >
    <Button
      android:id="@+id/submitBtn"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginLeft="42dp"
      android:layout_marginRight="42dp"
      android:layout_marginTop="45dp"
      android:layout_marginBottom="30dp"
      android:gravity="center"
      android:padding="13dp"
      android:background="@drawable/hfx_btn_done_new"
      android:text="@string/book_dubrecordpreview_title"
      android:textSize="18sp"
      android:textColor="@color/hfx_white" />

  </RelativeLayout>

</RelativeLayout>