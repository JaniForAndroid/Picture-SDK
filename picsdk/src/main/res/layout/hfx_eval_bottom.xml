<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="#fff">

  <ImageView
    android:layout_width="0dp"
    android:layout_height="0dp"
    android:background="@drawable/hfx_ic_eval_bg"
    android:contentDescription="@null"
    android:scaleType="centerCrop"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toTopOf="parent"/>

  <android.support.constraint.Guideline
    android:id="@+id/v_guideline1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:layout_constraintGuide_percent="0.2"/>

  <android.support.constraint.Guideline
    android:id="@+id/v_guideline2"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:layout_constraintGuide_percent="0.8"/>
  <android.support.constraint.Guideline
    android:id="@+id/v_guideline3"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:layout_constraintGuide_percent="0.6"/>

  <View
    android:id="@+id/divider2"
    android:layout_width="0dp"
    android:layout_height="0.5dp"
    android:background="#e5e5e5"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toTopOf="parent"/>

  <TextView
    android:id="@+id/tvScore"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:gravity="center"
    android:textColor="#333333"
    android:textSize="13sp"
    app:layout_constraintLeft_toLeftOf="@+id/v_guideline1"
    app:layout_constraintRight_toRightOf="@+id/v_guideline2"
    app:layout_constraintTop_toTopOf="parent"
    tools:text="91分"/>

  <TextView
    android:id="@+id/tvExplain"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:textColor="#999999"
    android:textSize="12sp"
    app:layout_constraintLeft_toLeftOf="@+id/v_guideline1"
    app:layout_constraintRight_toRightOf="@+id/v_guideline2"
    app:layout_constraintTop_toBottomOf="@+id/tvScore"
    tools:text="表现非常棒，再接再厉哦！"/>

  <TextView
    android:id="@+id/tvEvalContent"
    android:layout_width="0dp"
    android:layout_height="0dp"
    android:layout_marginTop="30dp"
    android:layout_marginBottom="10dp"
    android:gravity="center_horizontal|start"
    android:textColor="#333333"
    android:textSize="18sp"
    android:visibility="invisible"
    app:layout_constraintLeft_toLeftOf="@+id/v_guideline1"
    app:layout_constraintRight_toRightOf="@+id/v_guideline2"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toTopOf="@+id/ivRecord"
    tools:text="@tools:sample/full_names"/>

  <com.namibox.hfx.view.EvalScrollView
    android:id="@+id/scroll_view"
    android:layout_width="wrap_content"
    android:layout_height="0dp"
    android:layout_marginTop="9dp"
    android:layout_marginBottom="8dp"
    android:scrollbars="none"
    app:layout_constraintBottom_toTopOf="@+id/ivRecord"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/tvExplain">

    <com.zhy.view.flowlayout.FlowLayout
      android:id="@+id/scoreResultList"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      />
  </com.namibox.hfx.view.EvalScrollView>


  <ImageView
    android:id="@+id/ivRecord"
    android:layout_width="65dp"
    android:layout_height="65dp"
    android:layout_marginBottom="13dp"
    android:src="@drawable/hfx_ic_eval_record"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"/>

  <ImageView
    android:id="@+id/ivPlayAudio"
    android:layout_width="45dp"
    android:layout_height="45dp"
    android:layout_marginRight="38dp"
    android:contentDescription="@null"
    android:src="@drawable/hfx_eval_play_audio_selector"
    app:layout_constraintBottom_toBottomOf="@+id/ivRecord"
    app:layout_constraintRight_toLeftOf="@+id/ivRecord"
    app:layout_constraintTop_toTopOf="@+id/ivRecord"/>

  <ImageView
    android:id="@+id/ivPlayRecord"
    android:layout_width="45dp"
    android:layout_height="45dp"
    android:layout_marginLeft="38dp"
    android:contentDescription="@null"
    android:src="@drawable/hfx_eval_play_record_selector"
    app:layout_constraintBottom_toBottomOf="@+id/ivRecord"
    app:layout_constraintLeft_toRightOf="@+id/ivRecord"
    app:layout_constraintTop_toTopOf="@+id/ivRecord"/>


</android.support.constraint.ConstraintLayout>