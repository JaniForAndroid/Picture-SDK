<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:id="@+id/parent_view"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:paddingTop="20dp"
  android:paddingBottom="20dp">

  <uk.co.senab.photoview.PhotoView
    android:id="@+id/huiben_page"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/hfx_evalution_item_bg_0"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent" />

  <ImageView
    android:id="@+id/iv_head"
    android:layout_width="59dp"
    android:layout_height="59dp"
    android:layout_marginTop="60dp"
    android:background="@drawable/assist_oval_white_cycle"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toTopOf="@id/huiben_page" />

  <TextView
    android:id="@+id/tv_score"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textColor="#FE555C"
    android:textSize="21sp"
    android:textStyle="bold"
    app:layout_constraintTop_toTopOf="@id/iv_head"
    app:layout_constraintBottom_toBottomOf="@id/iv_head"
    app:layout_constraintLeft_toLeftOf="@id/iv_head"
    app:layout_constraintRight_toRightOf="@id/iv_head"
    tools:text="45"/>

  <TextView
    android:id="@+id/tv_content"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:textColor="@color/white"
    android:textSize="24sp"
    android:layout_marginTop="35dp"
    android:layout_marginStart="130dp"
    android:layout_marginEnd="130dp"
    android:textStyle="bold"
    android:gravity="center"
    app:layout_constraintTop_toBottomOf="@id/iv_head"
    app:layout_constraintLeft_toLeftOf="@id/huiben_page"
    app:layout_constraintRight_toRightOf="@id/huiben_page"
    tools:text="How are you?Fine thank you. Fine thank you."/>
</android.support.constraint.ConstraintLayout>