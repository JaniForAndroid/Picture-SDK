<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@color/white"
  xmlns:app="http://schemas.android.com/apk/res-auto">

  <android.support.constraint.Guideline
    android:id="@+id/top_guide_line"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    app:layout_constraintGuide_percent="0.1169"/>
  <android.support.constraint.Guideline
    android:id="@+id/bottom_guide_line"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    app:layout_constraintGuide_percent="0.9355"/>
  <ImageView
    android:layout_width="0dp"
    android:layout_height="0dp"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintDimensionRatio="375:650"
    android:src="@drawable/step_top_bg"/>
  <ImageView
    android:id="@+id/mina"
    android:layout_width="0dp"
    android:layout_height="0dp"
    app:layout_constraintBottom_toBottomOf="@+id/bottom_guide_line"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintDimensionRatio="375:450"
    android:src="@drawable/step_mina"/>
  <ImageView
    android:id="@+id/check_point"
    android:layout_width="0dp"
    android:layout_height="0dp"
    android:layout_marginRight="15dp"
    android:layout_marginLeft="15dp"
    app:layout_constraintTop_toTopOf="@+id/top_guide_line"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintDimensionRatio="345:200"
    android:src="@drawable/step_checkpoint_three"/>

  <TextView
    android:id="@+id/step_title"
    android:textStyle="bold"
    app:layout_constraintLeft_toLeftOf="@+id/mina"
    app:layout_constraintRight_toRightOf="@+id/mina"
    app:layout_constraintBottom_toBottomOf="@+id/mina"
    android:gravity="center"
    android:layout_width="0dp"
    android:layout_height="0dp"
    app:layout_constraintWidth_percent="0.7"
    app:layout_constraintHeight_percent="0.17"
    android:text="@string/book_progress_cover_title3"
    android:textColor="@color/white"
    android:textSize="18sp"
    />
</android.support.constraint.ConstraintLayout>