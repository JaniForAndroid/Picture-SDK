<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:orientation="vertical">

  <View
    android:id="@+id/status_bar_layout"
    android:layout_width="match_parent"
    android:layout_height="0dp" />

  <ImageView
    android:id="@+id/simple_back"
    android:layout_width="?attr/actionBarSize"
    android:layout_height="?attr/actionBarSize"
    android:scaleType="centerInside"
    android:padding="12dp"
    android:src="@drawable/ic_arrow_back_white"
    android:visibility="gone" />

  <android.support.constraint.ConstraintLayout
    android:id="@+id/title_bar_layout"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:visibility="visible">

    <ImageView
      android:id="@+id/back"
      android:layout_width="?attr/actionBarSize"
      android:layout_height="?attr/actionBarSize"
      android:visibility="visible"
      android:padding="12dp"
      android:scaleType="centerInside"
      android:src="@drawable/ic_arrow_back_white"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

    <FrameLayout
      android:id="@+id/left_menu"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_centerVertical="true"
      android:layout_marginLeft="8dp"
      android:visibility="gone"
      tools:visibility="visible"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintTop_toTopOf="parent">

      <ImageView
        android:id="@+id/left_menu_img1"
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:adjustViewBounds="true"
        android:layout_gravity="center"
        android:padding="0dp"
        tools:visibility="visible"
        tools:src="@drawable/default_icon"
        android:visibility="gone" />

      <TextView
        android:id="@+id/left_menu_text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingBottom="6dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="6dp"
        android:gravity="center"
        android:textColor="@color/actionbar_menu_color"
        android:textSize="14sp"
        android:visibility="visible"
        tools:text="dfddd" />
    </FrameLayout>
    <com.sevenheaven.segmentcontrol.SegmentControl
      android:id="@+id/segment_control"
      android:visibility="gone"
      android:layout_width="wrap_content"
      android:layout_height="30dp"
      android:textSize="14sp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:selectedColor="@color/theme_color"
      app:normalColor="#FFFFFF"
      app:textColors="@color/segment_text_color"
      app:cornerRadius="6dp"
      app:separatorWidth="1dp"
      app:boundWidth="1dp"
      app:verticalGap="6dp"
      app:horizonGap="12dp" />

    <EditText
      android:id="@+id/search_edittext"
      android:maxLines="1"
      android:inputType="text"
      android:textSize="14sp"
      android:paddingLeft="12dp"
      android:paddingRight="12dp"
      android:paddingTop="6dp"
      android:paddingBottom="6dp"
      tools:text="text"
      android:visibility="gone"
      android:textColor="#999"
      android:gravity="center_vertical"
      android:drawablePadding="12dp"
      android:drawableLeft="@drawable/ic_search"
      android:background="@drawable/search_view_bg"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      android:layout_marginRight="55dp"
      android:layout_marginLeft="55dp"
      android:layout_width="0dp"
      android:layout_height="wrap_content" />

    <ImageView
      android:id="@+id/search_close"
      android:visibility="gone"
      android:src="@drawable/ic_btn_close"
      app:layout_constraintBottom_toBottomOf="@+id/search_edittext"
      app:layout_constraintRight_toRightOf="@+id/search_edittext"
      app:layout_constraintTop_toTopOf="@+id/search_edittext"
      android:layout_marginEnd="6dp"
      android:layout_width="15dp"
      android:layout_height="15dp" />

    <LinearLayout
      android:id="@+id/titleLayout"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:gravity="center_horizontal"
      android:orientation="vertical"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintTop_toTopOf="parent">

      <com.namibox.commonlib.view.MarqueeTextView
        android:id="@+id/title"
        android:visibility="visible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="marquee"
        android:marqueeRepeatLimit="marquee_forever"
        android:maxWidth="@dimen/toolbar_title_max_width"
        android:singleLine="true"
        android:textColor="@color/actionbar_title_color"
        android:textSize="16sp"
        tools:text="sdfsdfs" />

      <TextView
        android:id="@+id/subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/actionbar_subtitle_color"
        android:textSize="12sp"
        android:visibility="gone"
        tools:text="333444" />
    </LinearLayout>

    <android.support.design.widget.TabLayout
      android:id="@+id/tablayout"
      android:visibility="gone"
      tools:visibility="visible"
      app:tabTextColor="#333"
      app:tabSelectedTextColor="@color/theme_color"
      app:tabIndicatorColor="@color/theme_color"
      app:tabIndicatorHeight="2dp"
      app:tabMode="fixed"
      app:tabGravity="fill"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintWidth_percent="0.75"
      android:layout_width="0dp"
      android:layout_height="wrap_content" />

    <FrameLayout
      android:id="@+id/menu1"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_centerVertical="true"
      android:layout_marginRight="8dp"
      android:visibility="gone"
      tools:visibility="visible"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintRight_toLeftOf="@+id/menu2"
      app:layout_constraintTop_toTopOf="parent">

      <ImageView
        android:id="@+id/menu_img1"
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:adjustViewBounds="true"
        android:layout_gravity="center"
        android:padding="0dp"
        android:minWidth="30dp"
        tools:src="@tools:sample/avatars"
        tools:visibility="visible"
        android:visibility="gone" />

      <TextView
        android:id="@+id/menu_text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingBottom="6dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:gravity="center"
        android:paddingTop="6dp"
        android:textColor="@color/actionbar_menu_color"
        android:textSize="14sp"
        android:visibility="visible"
        tools:text="dfddd" />
    </FrameLayout>

    <FrameLayout
      android:id="@+id/menu2"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginRight="8dp"
      android:visibility="gone"
      tools:visibility="visible"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintTop_toTopOf="parent">

      <ImageView
        android:id="@+id/menu_img2"
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:adjustViewBounds="true"
        android:layout_gravity="center"
        tools:src="@tools:sample/avatars"
        android:padding="0dp"
        android:minWidth="30dp"
        tools:visibility="visible"
        android:visibility="gone" />

      <TextView
        android:id="@+id/menu_text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingBottom="6dp"
        android:paddingLeft="10dp"
        android:gravity="center"
        android:paddingRight="10dp"
        android:paddingTop="6dp"
        android:textColor="@color/actionbar_menu_color"
        android:textSize="14sp"
        android:visibility="visible"
        tools:text="dfddddf" />
    </FrameLayout>

    <LinearLayout
      android:id="@+id/menu3"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_centerVertical="true"
      android:layout_marginRight="8dp"
      android:visibility="gone"
      tools:visibility="visible"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintRight_toLeftOf="@+id/menu1"
      app:layout_constraintTop_toTopOf="parent">

      <ImageView
        android:id="@+id/menu_img3"
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:adjustViewBounds="true"
        android:layout_gravity="center"
        tools:src="@tools:sample/avatars"
        android:padding="0dp" />

      <TextView
        android:id="@+id/menu_text3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingBottom="6dp"
        android:paddingLeft="0dp"
        android:paddingRight="0dp"
        android:gravity="center"
        android:paddingTop="6dp"
        android:textColor="@color/actionbar_menu_color"
        android:textSize="14sp"
        android:visibility="visible"
        android:text="添加到桌面" />
    </LinearLayout>

    <View
      android:id="@+id/divider"
      android:layout_width="0dp"
      android:layout_height="0.5dp"
      android:background="#aaa"
      android:visibility="gone"
      tools:visibility="visible"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="parent" />
  </android.support.constraint.ConstraintLayout>
</LinearLayout>