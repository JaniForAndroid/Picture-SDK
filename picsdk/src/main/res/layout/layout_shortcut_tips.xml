<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:background="@drawable/ic_add_to_shortcut_bg"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content">

  <ImageView
    android:id="@+id/shortcut_img"
    tools:src="@tools:sample/avatars"
    android:layout_centerVertical="true"
    android:scaleType="centerCrop"
    android:layout_marginLeft="10dp"
    android:layout_width="36dp"
    android:layout_height="36dp"/>
  <TextView
    android:id="@+id/shortcut_text1"
    android:text="添加到桌面"
    android:textSize="12sp"
    android:textColor="#333"
    android:layout_toRightOf="@+id/shortcut_img"
    android:layout_marginTop="15dp"
    android:layout_marginLeft="10dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"/>
  <TextView
    android:text="一键点读更方便！"
    android:textColor="#999"
    android:textSize="10sp"
    android:layout_toRightOf="@+id/shortcut_img"
    android:layout_alignLeft="@id/shortcut_text1"
    android:layout_below="@id/shortcut_text1"
    android:layout_marginTop="2dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"/>
  <ImageView
    android:id="@+id/shortcut_close"
    android:src="@drawable/ic_add_to_shortcut_close"
    android:layout_centerVertical="true"
    android:layout_toRightOf="@id/shortcut_text1"
    android:layout_marginLeft="40dp"
    android:layout_marginRight="8dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"/>
</RelativeLayout>