<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  >

  <RelativeLayout
    android:id="@+id/permissionItemList"
    android:layout_width="242dp"
    android:layout_height="175dp"
    android:layout_marginTop="31dp"
    android:layout_marginLeft="35dp"
    android:layout_marginRight="35dp"
    android:background="@drawable/notify_img_bg"
    android:gravity="center"
    android:orientation="vertical"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toTopOf="parent">
    <ImageView
      android:id="@+id/notify_img_one"
      android:layout_width="160dp"
      android:layout_height="175dp"
      android:background="@drawable/notify_img_1"/>
    <ViewFlipper
      android:id="@+id/view_flipper"
      android:layout_width="160dp"
      android:layout_height="175dp"
      android:autoStart="true"
      android:background="@color/transparent"
      android:flipInterval="1000"
      android:inAnimation="@anim/come_from_right"
      android:outAnimation="@anim/out_to_right"
      android:visibility="visible">
      <ImageView
        android:layout_width="160dp"
        android:layout_height="175dp"
        android:background="@color/transparent"/>
      <ImageView
        android:id="@+id/notify_img_two"
        android:layout_width="160dp"
        android:layout_height="175dp"
        android:background="@drawable/notify_img_2"/>
    </ViewFlipper>

  </RelativeLayout>

  <ImageView
    android:id="@+id/close"
    android:layout_width="30dp"
    android:layout_height="30dp"
    android:layout_marginTop="5dp"
    android:layout_marginRight="5dp"
    android:src="@drawable/common_permission_close"
    android:visibility="gone"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    tools:visibility="visible"/>

  <TextView
    android:id="@+id/tip0"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:gravity="center"
    android:text="请开启通知权限，便于您了解"
    android:textColor="@color/dialog_success_text_color"
    android:textSize="16sp"
    app:layout_constrainedWidth="true"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toBottomOf="@id/permissionItemList"/>
  <TextView
    android:id="@+id/tip"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:gravity="center"
    android:text="孩子学习情况、免费活动、最新课程提醒"
    android:textColor="@color/common_text_black"
    android:textSize="14sp"
    app:layout_constrainedWidth="true"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toBottomOf="@id/tip0"/>

  <LinearLayout
    android:id="@+id/setting_layout"
    android:layout_width="0dp"
    android:layout_height="60dp"
    android:layout_marginTop="10dp"
    android:gravity="center"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toBottomOf="@id/tip">
    <TextView
      android:id="@+id/openSetting"
      android:layout_width="200dp"
      android:layout_height="40dp"
      android:layout_gravity="center"
      android:background="@drawable/permission_blue_open_bg"
      android:gravity="center"
      android:text="现在开启"
      android:textColor="@android:color/white"
      android:textSize="16sp"/>
  </LinearLayout>

  <View
    android:layout_width="0dp"
    android:layout_height="30dp"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/setting_layout"
    />
</android.support.constraint.ConstraintLayout>