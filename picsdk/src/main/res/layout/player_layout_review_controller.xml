<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent">

  <ImageView
    android:id="@+id/back"
    android:layout_width="@dimen/dkplayer_controller_height"
    android:layout_height="@dimen/dkplayer_controller_height"
    android:padding="@dimen/dkplayer_controller_icon_padding"
    android:src="@drawable/player_ic_action_arrow_back"/>

  <ImageView
    android:id="@+id/lock"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center|start"
    android:layout_margin="12dp"
    android:padding="8dp"
    android:src="@drawable/player_selector_lock_button"
    android:visibility="gone"
    tools:visibility="visible" />

  <ImageView
    android:id="@+id/iv_screen_capture"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center|right"
    android:layout_margin="8dp"
    android:padding="8dp"
    android:src="@drawable/player_wx_video_screencut"
    tools:visibility="visible" />

  <ProgressBar
    android:id="@+id/loading"
    android:layout_width="@dimen/play_btn_size"
    android:layout_height="@dimen/play_btn_size"
    android:layout_gravity="center"
    android:indeterminateDrawable="@drawable/player_progress_loading"
    android:indeterminateDuration="2000"
    android:visibility="gone"
    tools:visibility="visible" />
</FrameLayout>