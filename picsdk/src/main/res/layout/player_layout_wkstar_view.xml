<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:id="@+id/star_container"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="#33000000">

    <RelativeLayout
      android:id="@+id/heart_layout"
      android:layout_width="130dp"
      android:layout_height="40dp"
      android:layout_marginTop="20dp"
      android:layout_marginRight="10dp"
      android:layout_gravity="right"
      tools:visibility="visible">

        <ImageView
          android:id="@+id/heart_img_one"
          android:layout_width="40dp"
          android:layout_height="40dp"
          android:layout_alignParentLeft="true"
          android:layout_centerVertical="true"
          android:background="@drawable/player_ic_heart_normal"
          />
        <ImageView
          android:id="@+id/heart_img_two"
          android:layout_width="40dp"
          android:layout_height="40dp"
          android:layout_centerInParent="true"
          android:background="@drawable/player_ic_heart_normal"
          />
        <ImageView
          android:id="@+id/heart_img_three"
          android:layout_width="40dp"
          android:layout_height="40dp"
          android:layout_alignParentRight="true"
          android:layout_centerVertical="true"
          android:background="@drawable/player_ic_heart_normal"
          />
    </RelativeLayout>

    <TextView
      android:id="@+id/tv_guide"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="60dp"
      android:layout_marginRight="40dp"
      android:layout_gravity="right"
      android:paddingTop="20dp"
      android:paddingBottom="15dp"
      android:paddingLeft="20dp"
      android:paddingRight="20dp"
      android:background="@drawable/player_guide_tip_tool_edit"
      android:maxWidth="280dp"
      android:text="@string/player_wk_tips"
      android:textColor="#fff"
      android:visibility="gone"
      tools:visibility="visible"/>
</FrameLayout>