<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_height="match_parent"
  android:layout_width="match_parent"
  xmlns:tools="http://schemas.android.com/tools">

  <com.google.android.exoplayer2.ui.AspectRatioFrameLayout
    android:id="@+id/video_frame"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center">

    <ImageView
      android:id="@+id/shutter"
      android:scaleType="fitXY"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:background="@android:color/black" />

  </com.google.android.exoplayer2.ui.AspectRatioFrameLayout>

  <com.google.android.exoplayer.lib.PlayControlView
    android:id="@+id/control"
    android:layout_width="match_parent"
    android:layout_height="match_parent" />

  <LinearLayout
    android:id="@+id/volume_layout"
    android:visibility="gone"
    android:layout_gravity="center"
    android:padding="12dp"
    android:background="@drawable/info_panel_bg"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <TextView
      android:id="@+id/volume_title"
      android:text="@string/player_volume"
      android:textColor="#fff"
      android:textSize="18sp"
      android:drawableLeft="@drawable/ic_volume_up"
      android:drawablePadding="8dp"
      android:gravity="center_vertical"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content" />
    <ProgressBar
      android:id="@+id/volume"
      style="@style/VolumeProgressStyle"
      android:layout_marginTop="16dp"
      android:layout_width="120dp"
      android:layout_height="wrap_content" />
  </LinearLayout>
  <LinearLayout
    android:id="@+id/brightness_layout"
    android:visibility="gone"
    android:layout_gravity="center"
    android:padding="12dp"
    android:background="@drawable/info_panel_bg"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <TextView
      android:id="@+id/brightness_title"
      android:text="@string/player_brightness"
      android:textColor="#fff"
      android:textSize="18sp"
      android:drawableLeft="@drawable/ic_brightness_low"
      android:drawablePadding="8dp"
      android:gravity="center_vertical"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content" />
    <ProgressBar
      android:id="@+id/brightness"
      style="@style/VolumeProgressStyle"
      android:layout_marginTop="16dp"
      android:layout_width="120dp"
      android:layout_height="wrap_content" />
  </LinearLayout>
  <TextView
    android:id="@+id/seek_title"
    android:visibility="gone"
    android:textColor="#fff"
    android:textSize="18sp"
    android:padding="12dp"
    android:layout_gravity="center"
    android:background="@drawable/info_panel_bg"
    android:drawableLeft="@drawable/ic_fast_forward"
    android:drawablePadding="8dp"
    android:gravity="center_vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" />
  <FrameLayout
    android:id="@+id/lock_unlock_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
      android:id="@+id/lock_unlock"
      android:visibility="gone"
      tools:visibility="visible"
      android:src="@drawable/ic_lock_open"
      android:paddingLeft="8dp"
      android:paddingRight="8dp"
      android:paddingTop="8dp"
      android:paddingBottom="8dp"
      android:layout_margin="12dp"
      android:layout_gravity="center_vertical|end"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content" />
  </FrameLayout>
</FrameLayout>