<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:layout_gravity="center_horizontal"
  android:paddingBottom="16dp">

  <LinearLayout
      android:id="@+id/tv_text_layout"
      android:layout_width="294dp"
      android:layout_height="wrap_content"
      android:minHeight="61dp"
      android:padding="15dp"
      android:gravity="center"
      android:background="@drawable/sp_choice_text_n"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintTop_toTopOf="parent">

    <TextView
      android:id="@+id/tv_text"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="center"
      android:gravity="left"
      android:textColor="#ff333333"
      android:textSize="15sp"
      android:textStyle="bold"
      tools:text="Everyone has own strength. There is no need to be ashamed of being " />

  </LinearLayout>

  <View
    android:id="@+id/view_correct_flag"
    android:layout_width="0dp"
    android:layout_height="0dp"
    android:background="@drawable/bg_exercise_correct_text_choice"
    android:visibility="gone"
    app:layout_constraintBottom_toBottomOf="@id/tv_text_layout"
    app:layout_constraintLeft_toLeftOf="@id/tv_text_layout"
    app:layout_constraintRight_toRightOf="@id/tv_text_layout"
    app:layout_constraintTop_toTopOf="@id/tv_text_layout" />

  <View
    android:id="@+id/view_error_flag"
    android:layout_width="0dp"
    android:layout_height="0dp"
    android:background="@drawable/bg_exercise_error_text_choice"
    android:visibility="gone"
    app:layout_constraintBottom_toBottomOf="@id/tv_text_layout"
    app:layout_constraintLeft_toLeftOf="@id/tv_text_layout"
    app:layout_constraintRight_toRightOf="@id/tv_text_layout"
    app:layout_constraintTop_toTopOf="@id/tv_text_layout" />

  <ImageView
    android:id="@+id/iv_correct_flag"
    android:layout_width="34dp"
    android:layout_height="34dp"
    android:src="@drawable/ic_correct_img_flag_2"
    android:visibility="gone"
    app:layout_constraintBottom_toBottomOf="@id/tv_text_layout"
    app:layout_constraintDimensionRatio="1:1"
    app:layout_constraintRight_toRightOf="@id/tv_text_layout"
    app:layout_constraintWidth_percent="0.3579"
    tools:visibility="visible" />

</android.support.constraint.ConstraintLayout>